<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/container_padding" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tome" />

        <Spinner
            android:id="@+id/tome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height"
            android:layout_weight="1"
            android:background="@drawable/droplist" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chapterNum" />

        <Spinner
            android:id="@+id/chapterNum"
            android:background="@drawable/droplist"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from" />

        <Spinner
            android:id="@+id/sectionFrom"
            android:background="@drawable/droplist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height"
            android:layout_weight="1" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to" />

        <Spinner
            android:id="@+id/sectionTo"
            android:layout_width="wrap_content"
            android:background="@drawable/droplist"
            android:layout_height="@dimen/spinner_height"
            android:layout_weight="1" />

    </TableRow>

    <ScrollView
        android:id="@+id/bibleBoxScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/container_padding" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/bibleBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/line_height"
                android:textSize="@dimen/bible_text_size" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>